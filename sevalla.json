{
  "build": {
    "type": "docker",
    "dockerfile": "Dockerfile.sevalla",
    "buildCommand": "docker build -f Dockerfile.sevalla -t app ."
  },
  "deploy": {
    "port": 8000,
    "healthcheck": {
      "path": "/health",
      "timeout": 30,
      "interval": 30,
      "retries": 3,
      "start_period": 120
    }
  },
  "resources": {
    "memory": "4Gi",
    "cpu": "2"
  }
}
